      inset 0 1px 0 rgba(255, 255, 255, 1),
      0 0 20px var(--accent-1-glow),
      0 6px 24px rgba(100, 80, 180, 0.12);
  }

  .contact-link svg {
    flex-shrink: 0;
  }
</style>
