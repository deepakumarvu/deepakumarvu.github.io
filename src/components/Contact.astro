<style>
  .contact-inner {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.7rem 1.4rem;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 999px;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--fg);
    text-decoration: none;
    transition: all 250ms ease;
    background: rgba(255, 255, 255, 0.07);
    backdrop-filter: blur(28px) saturate(1.8) brightness(1.06);
    -webkit-backdrop-filter: blur(28px) saturate(1.8) brightness(1.06);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.45),
      0 4px 20px rgba(0, 0, 0, 0.35);
  }
  .contact-link:hover {
    border-color: var(--accent-1);
    color: var(--accent-1);
    background: rgba(255, 255, 255, 0.11);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.55),
      0 0 20px var(--accent-1-glow),
      0 6px 24px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
  }

  :global([data-theme="light"]) .contact-link {
    background: rgba(255, 255, 255, 0.45);
    border-color: rgba(255, 255, 255, 0.7);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.95),
      0 4px 20px rgba(100, 80, 180, 0.08);
  }
