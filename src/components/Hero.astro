<section id="hero" class="hero">
  <!-- Grain overlay -->
  <svg class="grain" aria-hidden="true">
    <filter id="grain-filter">
      <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch"/>
      <feColorMatrix type="saturate" values="0"/>
    </filter>
    <rect width="100%" height="100%" filter="url(#grain-filter)" opacity="0.04"/>
  </svg>

  <div class="hero-inner container">
    <!-- Profile photo -->
    <div class="hero-photo-wrap">
      <img
        src="/profile.jpg"
        alt="Deepakumar V U"
        class="hero-photo"
        width="200"
        height="200"
      />
    </div>

    <!-- Text -->
    <div class="hero-text">
      <p class="section-label">Hey there</p>
      <h1 class="text-hero font-display">
        I'm <span class="gradient-text">Deepakumar.</span>
      </h1>
      <p class="hero-subtitle">
        Senior Software Engineer &amp; AWS Solutions Architect.<br/>
        Building secure, scalable cloud-native systems.
      </p>
      <div class="hero-roles font-mono text-sm text-muted">
        <span>Golang</span>
        <span class="dot">·</span>
        <span>AWS</span>
        <span class="dot">·</span>
        <span>Serverless</span>
        <span class="dot">·</span>
        <span>IoT</span>
        <span class="dot">·</span>
        <span>Product Management</span>
      </div>
      <div class="hero-cta">
        <a href="#contact" class="btn btn-primary">Get in touch</a>
        <a href="/resume.pdf" target="_blank" rel="noreferrer" class="btn">View résumé ↗</a>
      </div>
    </div>
  </div>

  <a href="#about" class="scroll-hint" aria-label="Scroll down">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <line x1="12" y1="5" x2="12" y2="19"/><polyline points="19 12 12 19 5 12"/>
    </svg>
  </a>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100dvh;
    display: flex;
    align-items: center;
  }

  /* ── Grain ─────────────────────────────────────────────── */
  .grain {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    -webkit-mask-image: linear-gradient(to bottom, black 50%, transparent 88%);
    mask-image: linear-gradient(to bottom, black 50%, transparent 88%);
  }

  /* ── Layout ────────────────────────────────────────────── */
  .hero-inner {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: clamp(2.5rem, 6vw, 5rem);
    padding-top: 5rem;
  }

  /* ── Photo ─────────────────────────────────────────────── */
  .hero-photo-wrap {
    flex-shrink: 0;
    position: relative;
  }

  .hero-photo-wrap::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 45% 55% 60% 40% / 55% 40% 60% 45%;
    background: linear-gradient(135deg, var(--accent-1), var(--accent-2), var(--accent-3));
    z-index: -1;
    animation: photo-border 8s ease-in-out infinite alternate;
  }

  @keyframes photo-border {
    from { border-radius: 45% 55% 60% 40% / 55% 40% 60% 45%; }
    to   { border-radius: 60% 40% 45% 55% / 40% 60% 45% 55%; }
  }

  .hero-photo {
    display: block;
    width: clamp(140px, 20vw, 200px);
    height: clamp(140px, 20vw, 200px);
    object-fit: cover;
    border-radius: 45% 55% 60% 40% / 55% 40% 60% 45%;
    border: 3px solid var(--bg);
    animation: photo-border 8s ease-in-out infinite alternate;
  }

  /* ── Text ──────────────────────────────────────────────── */
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(28px) saturate(1.8) brightness(1.05);
    -webkit-backdrop-filter: blur(28px) saturate(1.8) brightness(1.05);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.45),
      0 8px 32px rgba(0, 0, 0, 0.45);
    border-radius: 1.5rem;
    padding: 1.5rem;
    margin: -1.5rem;
  }

  :global([data-theme="light"]) .hero-text {
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(28px) saturate(1.8) brightness(1.05);
    -webkit-backdrop-filter: blur(28px) saturate(1.8) brightness(1.05);
    border: 1px solid rgba(255, 255, 255, 0.6);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.9),
      0 8px 32px rgba(100, 80, 180, 0.08);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--fg);
    opacity: 0.85;
    line-height: 1.6;
    max-width: 480px;
  }

  .hero-roles {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem 0.6rem;
    align-items: center;
    color: var(--fg);
    opacity: 0.7;
  }
  .dot { color: var(--accent-1); opacity: 1; }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent-1), var(--accent-2));
    color: var(--bg);
    border-color: transparent;
    font-weight: 600;
  }
  .btn-primary:hover {
    opacity: 0.88;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px var(--accent-1-glow);
    color: var(--bg);
    border-color: transparent;
  }

  /* ── Scroll hint ───────────────────────────────────────── */
  .scroll-hint {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    color: var(--fg);
    background: color-mix(in srgb, var(--surface) 70%, transparent);
    border: 1px solid var(--border);
    border-radius: 999px;
    width: 2.2rem;
    height: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: bob 2s ease-in-out infinite;
    transition: color 200ms, border-color 200ms, box-shadow 200ms;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }
  .scroll-hint:hover {
    color: var(--accent-1);
    border-color: var(--accent-1);
    box-shadow: 0 0 12px var(--accent-1-glow);
  }

  @keyframes bob {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50%       { transform: translateX(-50%) translateY(6px); }
  }

  /* ── Responsive ────────────────────────────────────────── */
  @media (max-width: 640px) {
    .hero-inner {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
      padding-top: 6rem;
      padding-bottom: 4rem;
    }
    .hero-roles { justify-content: center; }
    .hero-cta   { justify-content: center; }
    .hero-subtitle { margin-inline: auto; }
    .scroll-hint { display: none; }
  }

  /* ── Nest Hub & short wide viewports ───────────────────── */
  @media (max-width: 1024px) {
    .hero-subtitle,
    .hero-roles {
      text-shadow: 0 1px 12px rgba(0, 0, 0, 0.5);
    }
  }

  :global([data-theme="light"]) .hero-subtitle,
  :global([data-theme="light"]) .hero-roles {
    text-shadow: none;
  }
</style>
