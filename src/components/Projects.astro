---
import { projects } from '../data/projects';
---

<section id="projects" class="section">
  <div class="container">
    <p class="section-label reveal">Work</p>
    <h2 class="text-xl font-display reveal" style="margin-bottom:2.5rem">What I've built</h2>

    <div class="project-list">
      {projects.map((project, i) => (
        <div class={`card project-card reveal`} style={`transition-delay:${i * 80}ms`}>
          <div class="project-header">
            <h3 class="project-name">{project.name}</h3>
            <div class="project-links">
              {project.demo && (
                <a href={project.demo} target="_blank" rel="noreferrer" class="btn" style="font-size:0.8rem;padding:0.35rem 0.9rem">
                  Demo ↗
                </a>
              )}
              {project.github && (
                <a href={project.github} target="_blank" rel="noreferrer" class="btn" style="font-size:0.8rem;padding:0.35rem 0.9rem">
                  GitHub ↗
                </a>
              )}
            </div>
          </div>
          <p class="project-desc text-muted">{project.description}</p>
          <div class="project-tags">
            {project.tags.map((tag) => <span class="chip">{tag}</span>)}
          </div>
        </div>
      ))}
    </div>

    <div class="reveal" style="margin-top:2rem">
      <a href="https://github.com/deepakumarvu" target="_blank" rel="noreferrer" class="btn">
        More on GitHub ↗
      </a>
    </div>
  </div>
</section>

<style>
  .project-list { display: flex; flex-direction: column; gap: 1rem; }

  .project-card { display: flex; flex-direction: column; gap: 1rem; }

  .project-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-name { font-size: 1.1rem; font-weight: 600; }

  .project-links { display: flex; gap: 0.5rem; flex-shrink: 0; }

  .project-desc { font-size: 0.93rem; line-height: 1.7; }

  .project-tags { display: flex; flex-wrap: wrap; gap: 0.4rem; }
</style>
