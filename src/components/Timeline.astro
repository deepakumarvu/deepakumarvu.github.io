---
import { work, education } from '../data/timeline';

const groups = [
  { label: 'Work Experience', entries: work },
  { label: 'Education & College Activities', entries: education },
];
---

<section id="experience" class="section">
  <div class="container">
    <p class="section-label reveal">Career</p>
    <h2 class="text-xl font-display reveal">Experience &amp; Education</h2>

    <div class="tl-groups">
      {groups.map(({ label, entries }) => (
        <div class="tl-group reveal">
          <h3 class="tl-group-label font-mono">{label}</h3>
          <div class="tl-list">
            {entries.map((entry, i) => (
              <div class={`tl-card reveal${entry.current ? ' tl-current' : ''}`} style={`transition-delay:${i * 60}ms`}>
                <div class="tl-date font-mono text-sm text-muted">
                  {entry.date}
                  {entry.current && <span class="tl-now-badge">● Present</span>}
                </div>
                <div class="tl-content">
                  <div class="tl-header">
                    <div class="tl-title-row">
                      {entry.url
                        ? <a href={entry.url} target="_blank" rel="noreferrer" class="tl-title">{entry.title} ↗</a>
                        : <span class="tl-title">{entry.title}</span>
                      }
                      {entry.badge && (
                        entry.badge === 'Competition'
                          ? (
                            <span class="tl-badge-trophy" title="Competition">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M6 9H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h2"/>
                                <path d="M18 9h2a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2h-2"/>
                                <path d="M6 3h12v8a6 6 0 0 1-12 0V3z"/>
                                <path d="M12 17v4"/>
                                <path d="M8 21h8"/>
                              </svg>
                            </span>
                          )
                          : <span class="tl-badge" data-badge={entry.badge}>{entry.badge}</span>
                      )}
                    </div>
                    <span class="tl-role text-muted text-sm">{entry.subtitle}</span>
                  </div>
                  {entry.tags && entry.tags.length > 0 && (
                    <div class="tl-tags">
                      {entry.tags.map((tag) =>
                        <span class="chip">{tag}</span>
                      )}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="tl-resume reveal">
      <a href="/resume.pdf" target="_blank" rel="noreferrer" class="btn">
        Download full résumé ↗
      </a>
    </div>
  </div>
</section>

<style>
  .tl-groups {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 2.5rem;
  }

  .tl-group-label {
    font-size: 0.72rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent-1);
    margin-bottom: 1.25rem;
    font-weight: 500;
  }

  .tl-list {
    display: flex;
    flex-direction: column;
    border-left: 2px solid var(--border);
  }

  .tl-card {
    display: grid;
    grid-template-columns: 130px 1fr;
    gap: 1rem;
    padding: 1.25rem 0 1.25rem 1.5rem;
    position: relative;
    border-bottom: 1px solid var(--border);
  }
  .tl-card:last-child { border-bottom: none; }

  .tl-card::before {
    content: '';
    position: absolute;
    left: -5px;
    top: 1.6rem;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--accent-1);
    border: 2px solid var(--bg);
    transition: background 200ms;
  }
  .tl-card:hover::before { background: var(--accent-2); }

  /* Education group uses accent-3 (mint) dots */
  .tl-group:last-child .tl-card::before { background: var(--accent-3); }
  .tl-group:last-child .tl-card:hover::before { background: var(--accent-2); }
  .tl-group:last-child .tl-group-label { color: var(--accent-3); }

  .tl-date {
    padding-top: 0.1rem;
    line-height: 1.4;
    flex-shrink: 0;
  }

  .tl-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tl-header {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .tl-title {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--fg);
    text-decoration: none;
    transition: color 200ms;
  }
  a.tl-title:hover { color: var(--accent-1); }

  .tl-title-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tl-badge {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    padding: 0.1rem 0.5rem;
    border-radius: 999px;
    flex-shrink: 0;
    /* default: blush — Internship */
    background: var(--accent-2-glow);
    color: var(--accent-2);
    border: 1px solid var(--accent-2);
  }
  .tl-badge-trophy {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.6rem;
    height: 1.6rem;
    border-radius: 50%;
    background: var(--accent-3-glow);
    border: 1px solid var(--accent-3);
    color: var(--accent-3);
    flex-shrink: 0;
  }

  .tl-role { display: block; }

  .tl-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }
  .tl-tags .chip { font-size: 0.68rem; padding: 0.12rem 0.55rem; }

  /* ── CGPA chip ───────────────────────────────────────────── */
  /* ── Current role highlight ──────────────────────────────── */
  .tl-current {
    background: none;
    border-bottom: none !important;
    margin-bottom: 0.5rem;
    padding-right: 1rem;
  }
  /* Glowing accent line that sits on top of the grey timeline border */
  .tl-current::after {
    content: '';
    position: absolute;
    left: -2px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--accent-1), color-mix(in srgb, var(--accent-1) 20%, transparent));
    box-shadow: 0 0 10px var(--accent-1-glow);
  }
  .tl-current::before {
    width: 12px;
    height: 12px;
    left: -7px;
    background: var(--accent-1) !important;
    box-shadow: 0 0 0 3px var(--accent-1-glow), 0 0 10px var(--accent-1);
    animation: dot-pulse 2s ease-in-out infinite;
  }
  @keyframes dot-pulse {
    0%, 100% { box-shadow: 0 0 0 3px var(--accent-1-glow), 0 0 10px var(--accent-1); }
    50%       { box-shadow: 0 0 0 6px var(--accent-1-glow), 0 0 18px var(--accent-1); }
  }

  .tl-now-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.3rem;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    color: var(--accent-1);
    font-family: 'JetBrains Mono', monospace;
  }

  .tl-resume { margin-top: 2.5rem; }

  @media (max-width: 900px) {
    .tl-groups { grid-template-columns: 1fr; gap: 2.5rem; }
  }

  @media (max-width: 500px) {
    .tl-card {
      grid-template-columns: 1fr;
      gap: 0.3rem;
      padding-left: 1.25rem;
    }
  }
</style>
